@model DbLibrary.ViewInventoryViewModels

@{
    ViewData["Title"] = "Inventory";
}

<h2>Please choose your desired quantity from the available products below.</h2>

<form method="POST" asp-action="AddProducts" asp-controller="Order" class="nav-link text-dark">
    @foreach (var item in Model.InventoriesAll)
    {
        <br>
        <div>
            <span>@item.ProductName</span>
            <div>
                <select name="@item.ProductName">
                    @for (int i = 0; i <= item.ProductQuantity; i++)
                    {
                        <option value=@i>@i</option>
                        <br>
                    }
                </select>
            </div>
        </div>
    }
    <input type="submit" value="Submit">
</form>
<br />
<a asp-action="LogOut" asp-controller="Login">Log Out and Start Over?</a>
